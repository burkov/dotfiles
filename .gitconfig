[diff]
    tool = meld
[merge]
	conflictstyle = diff3
[mergetool "meld"]
	cmd = meld --diff $BASE $LOCAL --diff $BASE $REMOTE --diff $LOCAL $MERGED $REMOTE
[core]
    pager = less -X
[color]
    status = auto
    branch = auto
    diff = auto
    grep = auto
[user]
    name = Alexander Burkov
    email = alex.burkov@motorolasolutions.com
[alias]
    st = status
    co = checkout
    ci = commit
    gr = log --all --oneline --graph --decorate
[push]
    default = simple
